# Esc      :    command mode
# i        :    GDB mode.
# s        :    scroll mode in the GDB mode.
# Ctrl-W   : Toggle the window orientation (horizontal <-> vertical).
# spacebar : Sets a breakpoint
# t        : Sets a temporary breakpoint
# -        : Shrink source window 1 line or column (depending on split orientation).
# =        : Grow source window 1 line or column (depending on split orientation).
# _        : Shrink source window 25%
# +        : Grow source window 25%
# Ctrl-l   : Clear and redraw the screen.
# F5       : Send a run command to GDB.
# F6       : Send a continue command to GDB.
# F7       : Send a finish command to GDB.
# F8       : Send a next command to GDB.
map <F9> :until<cr>
# F10      : Send a step command to GDB.
map <Space> :next<cr>

set autosourcereload
set color
set debugwincolor
set hlsearch
set ignorecase
set showmarks
# set winsplit=src_big
#‘src_full, ‘src_big, ‘even, ‘gdb_big, and ‘gdb_full.
set winsplitorientation=vertical
#‘horizontal‘vertical
# set wrapscan


